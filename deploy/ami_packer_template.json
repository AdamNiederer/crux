{
  "variables": {
    "aws_region": "{{env `AWS_REGION`}}",
    "source_ami": "{{env `AWS_BASE_AMI`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "region": "{{user `aws_region`}}",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "t2.medium",
    "ssh_username": "ec2-user",
    "ami_name": "crux-ami-{{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "packer_scripts/install_base.sh",
      "environment_vars": {}
    }
  ]
}
